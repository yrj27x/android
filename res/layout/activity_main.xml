<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_weight="0.02"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imagegreendot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/greendot" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical" >

                <TextView
                android:id="@+id/textfaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
 				android:text="Location"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/alertsmslayout"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/bg_round"
                android:gravity="bottom|center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="126dp"
                    android:layout_height="140dp"
                    android:layout_weight="0.25"
                    android:src="@drawable/exlmark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bgbtmround"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textalertsms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alert SMS"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/policelayout"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/bg_2"
                android:gravity="bottom|center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="141dp"
                    android:layout_height="116dp"
                    android:layout_weight="0.48"
                    android:src="@drawable/police" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bgbtmround"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textpolice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Police Station"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:id="@+id/ScrollView2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/hospitallayout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_2" >

                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="67dp"
                            android:layout_height="69dp"
                            android:src="@drawable/hospital" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/texthospital"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hospital"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chemistlayout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_2" >

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textchemist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chemist"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                             />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="67dp"
                            android:layout_height="69dp"
                            android:src="@drawable/chemist" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bloodbanklayout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_2"
                    android:padding="2dp" >

                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="60dp"
                            android:layout_height="63dp"
                            android:src="@drawable/blooddrop" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textblood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blood"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#ff0000" />

                        <TextView
                            android:id="@+id/textbank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                             />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/firstaidlayot"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/bg_3" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/firstaid" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textfirstaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="First Aid"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
